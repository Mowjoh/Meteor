<Page x:Class="Meteor.sections.Stages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Meteor.sections"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Stages" MinWidth="800" MinHeight="500" Width="650" Height="324">

    <Grid x:Name="StagesGrid" MinWidth="800" MinHeight="500">
        <Label x:Name="messageLabel" Content="This section is under construction, come back later!"
            HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"
            FontSize="22" FontFamily="Super Mario 256"
            ToolTip="Yeah, it actually means that. Basically I've not yet finished this section so I'm hiding it with this text. Yeah, pretty much all there is to that." Width="600" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0" />
    </Grid>
</Page>
